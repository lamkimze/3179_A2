{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "/data/unemployment_vs_gdp_growth.csv"
  },
  "title": "Unemployment Rate Changes over Time",
  "width": 800,
  "height": 450,
  "params": [
    {
      "name": "select_continent",
      "value": "World",
      "bind": {
        "input": "select",
        "options": [
          "World",
          "Asia",
          "Africa",
          "Europe",
          "North America",
          "South America",
          "Oceania"
        ],
        "name": "Continent selection:  "
      }
    }
  ],
  "transform": [
    {
      "filter": "select_continent =='World' || datum.Continent == select_continent"
    },
    {
      "aggregate": [
        {
          "op": "mean",
          "field": "unemployment_change",
          "as": "mean_unemployment_change"
        }
      ],
      "groupby": [
        "Year"
      ]
    },
    {
      "window": [
        {
          "op": "sum",
          "field": "mean_unemployment_change",
          "as": "sum"
        }
      ]
    },
    {
      "window": [
        {
          "op": "lead",
          "field": "Year",
          "as": "lead"
        }
      ]
    },
    {
      "calculate": "datum.lead === null ? datum.Year : datum.lead",
      "as": "lead"
    },
    {
      "calculate": "datum.Year === 'end' ? 0 : datum.sum - datum.mean_unemployment_change",
      "as": "previous_sum"
    },
    {
      "calculate": "datum.Year === 'end' ? datum.sum : datum.mean_unemployment_change",
      "as": "mean_unemployment_change"
    },
    {
      "calculate": "(datum.Year !== '2005' && datum.Year !== 'end' && datum.mean_unemployment_change > 0 ? '+' : '') + datum.mean_unemployment_change",
      "as": "text_amount"
    },
    {
      "calculate": "(datum.sum + datum.previous_sum) / 2",
      "as": "center"
    },
    {
      "calculate": "datum.sum < datum.previous_sum ? datum.sum : ''",
      "as": "sum_dec"
    },
    {
      "calculate": "datum.sum > datum.previous_sum ? datum.sum : ''",
      "as": "sum_inc"
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "sort": null,
      "axis": {
        "labelAngle": 0,
        "title": "Year"
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "bar",
        "size": 45
      },
      "encoding": {
        "y": {
          "field": "previous_sum",
          "type": "quantitative",
          "title": "Unemployment Rate",
          "scale": {
            "domain": [
              0,
              17
            ]
          }
        },
        "y2": {
          "field": "sum"
        },
        "color": {
          "condition": [
            {
              "test": "datum.Year === 'start' || datum.Year === 'end'",
              "value": "#A9A9A9"
            },
            {
              "test": "datum.sum > datum.previous_sum",
              "value": "#f78a64"
            }
          ],
          "value": "#93c4aa"
        },
        "tooltip": [
          {
            "format": {
              "fontWeight": "bold"
            }
          },
          {
            "field": "Year",
            "title": "Year"
          },
          {
            "field": "mean_unemployment_change",
            "title": "Unemployment Change",
            "format": ".2f"
          },
          {
            "field": "sum",
            "title": "Unemployment Rate",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "#404040",
        "opacity": 1,
        "strokeWidth": 2,
        "xOffset": -22.5,
        "x2Offset": 22.5
      },
      "encoding": {
        "x2": {
          "field": "lead"
        },
        "y": {
          "field": "sum",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "dy": -4,
        "baseline": "bottom"
      },
      "encoding": {
        "y": {
          "field": "sum_inc",
          "type": "quantitative"
        },
        "text": {
          "condition": {
            "test": "datum.sum_inc !== ''",
            "field": "text_amount",
            "type": "nominal",
            "format": ".2f"
          }
        },
        "color": {
          "condition": {
            "test": "datum.Year != 'start' || datum.Year != 'end'",
            "value": "#f78a64"
          },
          "value": "black"}
      }
    },
    {
      "mark": {
        "type": "text",
        "dy": 4,
        "baseline": "top"
      },
      "encoding": {
        "y": {
          "field": "sum_dec",
          "type": "quantitative"
        },
        "text": {
          "condition": {
            "test": "datum.sum_dec !== ''",
            "field": "text_amount",
            "type": "nominal",
            "format": ".2f"
          }
        },
        "color": {
          "condition": {
            "test": "datum.Year != 'start' || datum.Year != 'end'",
            "value": "#93c4aa"
          },
          "value": "black"}
      }
    }
  ],
  "config": {
    "text": {
      "fontWeight": "bold",
      "color": "#404040"
    },
    "title": {
      "font": "sans-serif",
      "fontSize": 14
    },
    "background": "transparent"
  }
}