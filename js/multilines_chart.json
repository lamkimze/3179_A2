{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Life Expectancy by Continent Over Time",
    "data": {
        "url": "https://raw.githubusercontent.com/lamkimze/3179_A2/main/data/LifeExpectancyData.csv"
    },
    "transform": [
        {
            "aggregate": [
                {
                    "op": "mean","field": "Life_Expectancy","as": "meanLife_Expectancy"
                }
            ],
            "groupby": ["Year", "Continent"]
        }
    ],
    "mark": {
        "type": "line",
        "point": true
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "ordinal"
        },
        "y": {
            "field": "meanLife_Expectancy",
            "type": "quantitative",
            "scale":{
                "domain": [50, 80]
            },
            "title": "Life Expectancy",
            "axis":{
                "ticks": true
            }
        },
        "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
                "domain": [
                    "Asia",
                    "Africa",
                    "Europe",
                    "North America",
                    "South America",
                    "Oceania"
                ],
                "range": [
                    "#e41a1c",
                    "#984ea3",
                    "#ff7f00",
                    "#bc6c25",
                    "#377eb8",
                    "#0BDA51"
                ]
            }
        },
        "opacity" : {
            "value": 0.6
        },
        "tooltip": [
            {
                "field": "Continent",
                "title": "Continent"
            },
            {
                "field": "Year",
                "title": "Year"
            },
            {
                "field": "meanLife_Expectancy",
                "title": "Life Expectancy",
                "format": ".2f"
            }
        ]
    }
}