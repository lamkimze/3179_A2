{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/lamkimze/3179_A2/main/data/gdp_population_datasets.csv"
    },
    "params": [
        {
            "name": "focus_zoom",
            "value": "World",
            "bind": {
                "input": "select",
                "options": [
                    "World",
                    "Asia",
                    "Africa",
                    "Europe",
                    "North America",
                    "South America",
                    "Oceania"
                ],
                "name": "Focus on:  "
            }
        }
    ],
    "vconcat": [
        {
            "width": 1000,
            "height": 500,
            "title": "Global GDP per Capita (1995 - 2023)",
            "projection": {
                "type": "equirectangular"
            },
            "layer": [
                {
                    "transform": [
                        {
                            "calculate": "'Data is not available in ' + datum.properties.NAME + '.'",
                            "as": "missing"
                        },
                        {
                            "calculate": "'Not applicable due to different Continent.'",
                            "as": "not_applicable"
                        }
                    ],
                    "data": {
                        "url": "https://raw.githubusercontent.com/lamkimze/3179_A2/main/js/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_admin_0_countries"
                        }
                    },
                    
                    "mark": {
                        "type": "geoshape",
                        "fill": "lightgray",
                        "stroke": "white"
                    },
                    "encoding": {
                        "tooltip": {
                            "condition": {
                                "test": "focus_zoom == 'World' || datum.properties.CONTINENT == focus_zoom",
                                "field": "missing"
                            },
                            "field": "not_applicable"
                        }
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "oceans"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": "skyblue"
                    }
                },
                {
                    "data": {
                        "url": "https://raw.githubusercontent.com/lamkimze/3179_A2/main/js/ne_110m_admin_0_countries.topojson",
                        "format": {
                            "type": "topojson",
                            "feature": "ne_110m_graticules_30"
                        }
                    },
                    "mark": {
                        "type": "geoshape",
                        "fill": null,
                        "stroke": "white"
                    }
                },
                {
                    "transform": [
                        {
                            "filter": {
                                "param": "time_brush"
                            }
                        }
                    ],
                    "layer":[
                        {
                            "transform": [
                                {
                                    "lookup": "Country",
                                    "from": {
                                        "data": {
                                            "url": "https://raw.githubusercontent.com/lamkimze/3179_A2/main/js/ne_110m_admin_0_countries.topojson",
                                            "format": {
                                                "type": "topojson",
                                                "feature": "ne_110m_admin_0_countries"
                                            }
                                        },
                                        "key": "properties.NAME"
                                    },
                                    "as": "geo"
                                },
                                {
                                    "filter": "focus_zoom == 'World' || datum.Continent == focus_zoom"
                                }
                            ],
                            "mark": {
                                "type": "geoshape",
                                "stroke": "white"
                            },
                            "encoding": {
                                "shape": {
                                    "field": "geo",
                                    "type": "geojson"
                                },
                                "color": {
                                    "field": "GDP per Capita",
                                    "type": "quantitative",
                                    "scale": {
                                        "type": "log",
                                        "domain": [
                                            100,
                                            500,
                                            1000,
                                            5000,
                                            10000,
                                            50000,
                                            100000,
                                            500000
                                        ],
                                        "range": [
                                            "#ebccff",
                                            "#cc80ff",
                                            "#ad33ff",
                                            "#8a00e6",
                                            "#5c0099",
                                            "#2e004d",
                                            "#000000"
                                        ]
                                    },
                                    "legend": {
                                        "title": "GDP (USD)",
                                        "titleLimit": 250
                                    }
                                },
                                "tooltip": [
                                    {
                                        "field": "Country",
                                        "type": "nominal",
                                        "title": "Country"
                                    },
                                    {
                                        "field": "Continent",
                                        "type": "nominal",
                                        "title": "Continent"
                                    },
                                    {
                                        "field": "GDP per Capita",
                                        "type": "quantitative",
                                        "format": ",.2f",
                                        "title": "GDP per Capita (USD)"
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        },
        {
            "width": 1000,
            "height": 60,
            "mark": "line",
            "title": "Average global GDP per Capita trend",
            "params": [
                {
                    "name": "time_brush",
                    "select": {
                        "type": "interval",
                        "encodings": [
                            "x"
                        ]
                    }
                }
            ],
            "transform": [
                {"filter": "focus_zoom == 'World' || datum.Continent == focus_zoom"}
            ],
            "encoding": {
                "x": {
                    "field": "Year",
                    "timeUnit": "year",
                    "axis": {
                        "title": "Year",
                        "format": "%Y"
                    }
                },
                "y": {
                    "field": "GDP per Capita",
                    "type": "quantitative",
                    "aggregate": "mean",
                    "axis": {
                        "title": "GDP per Capita (USD)"
                    }
                }
            }
        }
    ],
    "config": {
        "title": {
            "font": "sans-serif",
            "fontSize": 14
        }
    }
}
