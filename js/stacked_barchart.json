{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "GDP Composition of Top 10 Countries", 
    "data": {
        "url": "https://raw.githubusercontent.com/lamkimze/3179_A2/main/data/gdp_composition.csv"
    },
    "params": [
        {
            "name": "field_filter",
            "select":{
                "type": "point",
                "fields": [
                    "Field"
                ]
            },
            "bind": "legend"
        }
    ],
    "transform": [
        {
            "calculate": "datum['Composition'] * datum['GDP (T)']",
            "as": "formatted_composition"
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "ranking"
                }
            ],
            "sort": [
                {
                    "field": "GDP (T)",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum.ranking <= 40"
        }
    ],
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Country",
            "type": "nominal",
            "title": "Country"
        },
        "y": {
            
            "field": "formatted_composition",
            "aggregate": "sum",
            "type": "quantitative",
            "title": "GDP (T)"
        },
        "color": {
            "field": "Field",
            "type": "nominal",
            "scale": {
                "domain": [
                    "Agriculture",
                    "Industry",
                    "Services",
                    "Other"
                ],
                "range": [
                    "#e7ba52",
                    "#c7c7c7",
                    "#1f77b4",
                    "#9467bd"
                ]
            }
        },
        "tooltip":[
            {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
            },
            {
                "field": "Field",
                "type": "nominal",
                "title": "Field"
            },
            {
                "field": "formatted_composition",
                "type": "quantitative",
                "title": "GDP (Trillion USD$)"
            }
        ]
    },
    "config": {
        "title": {
            "font": "sans-serif",
            "fontSize": 14
        }
    }
}
